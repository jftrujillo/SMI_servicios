<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jhon.smi_servicios.CarBorrowActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <RelativeLayout
        android:id="@+id/relative_img"
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            />
        </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/relative_img"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/smal_margin"
        >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/date_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/medium_letter"
            android:text="00/00/0000"
            android:layout_gravity="center"
            android:textColor="@color/blackSmi"
            android:layout_margin="@dimen/mediumpadding"
            />
        <Button
            android:id="@+id/car_borrow_date_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fecha inicial"
            android:textAllCaps="false"
            />

    </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/date_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/medium_letter"
                android:text="00/00/0000"
                android:layout_gravity="center"
                android:textColor="@color/blackSmi"
                android:layout_margin="@dimen/mediumpadding"
                />
            <Button
                android:id="@+id/car_borrow_date_date_finish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fecha final"
                android:textAllCaps="false"
                />
        </LinearLayout>
    </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/numero_puestos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <android.support.v7.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Numero de puestos"
                android:maxLines="1"
                android:inputType="number"
                android:singleLine="true"
                android:imeOptions="actionNext"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <android.support.v7.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descripcion adicional"
                android:maxLines="1"
                android:inputType="textLongMessage"
                android:imeOptions="actionDone"
                />
        </android.support.design.widget.TextInputLayout>
        <Button
            android:id="@+id/btn_acept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solicitar"
            android:layout_gravity="center"
            android:padding="@dimen/smal_margin"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:background="#589488"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            />
    </LinearLayout>



</RelativeLayout>
